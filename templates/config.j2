!
vlan 1 name DEFAULT-VLAN by port
 spanning-tree 802-1w
 webauth
  auth-mode username-password auth-methods local
{% if not icx_is_l3_switch %}
 management-vlan
 default-gateway  {{ icx_default_gw }} 1
{% else %}
 router-interface ve 1
{% endif %}
!

{% for item in icx_vlans %}
{% set ns = namespace(ports_found = false) %}
{% for tag_type in ["tagged", "untagged"] %}
{% if tag_type in vlan_port_diff[item.id] %}
{% if vlan_port_diff[item.id][tag_type]['ports_to_add'] != [] %}
{% set ns.ports_found = true %}
{% endif %}
{% if vlan_port_diff[item.id][tag_type]['ports_actual'] != [] %}
{% set ns.ports_found = true %}
{% endif %}
{% endif %}
{% endfor %}
{% if not ns.ports_found %}
no vlan {{ item.id }} name {{ item.name}} by port
{% else %}
vlan {{ item.id }} name {{ item.name}} by port
{% for tag_type in ["tagged", "untagged"] %}
{% if tag_type in vlan_port_diff[item.id] %}
{% if vlan_port_diff[item.id][tag_type]['ports_to_add'] != [] %}
 {{ tag_type }} ethernet {{ vlan_port_diff[item.id][tag_type]['ports_to_add']|join(' ethernet ') }}
{% endif %}
{% if vlan_port_diff[item.id][tag_type]['ports_to_remove'] != [] %}
 no {{ tag_type }} ethernet {{ vlan_port_diff[item.id][tag_type]['ports_to_remove']|join(' ethernet ') }}
{% endif %}
{% endif %}
{% endfor %}
 spanning-tree 802-1w
 multicast fast-leave-v2
{% endif %}
!
{% endfor %}

{% for item in icx_lags %}
{#
{% for port in item.ports %}
no interface ethernet {{ port }}
!
{% endfor %}
#}
{% for port in item.ports %}
{% if port in lag_port_diff[item.name]["ports_to_add"] or port == item.primary_port %}
interface ethernet {{ port }}
 broadcast limit 8192
 unknown-unicast limit
{% if item.type == 'trust' %}
 raguard trust
 stp-bpdu-guard
 dhcp snooping trust
{% endif %}
{% for item in item.extraconfig|default([]) %}
 {{ item }}
{% endfor %}
!
{% endif %}
{% endfor %}
{% endfor %}

{% for item in icx_lags %}
lag {{ item.name }} dynamic id {{ item.id }}
{% for port in lag_port_diff[item.name]["ports_to_add"] %}
 ports ethe {{ port }}
{% endfor %}
{% for port in lag_port_diff[item.name]["ports_to_remove"] %}
 no ports ethe {{ port }}
{% endfor %}

 primary-port {{ item.primary_port }}
 lacp-timeout {{ item.timeout }}
 deploy
!
{% endfor %}

ipv6 raguard policy client
ipv6 raguard vlan 1 policy client
{% for item in icx_vlans %}
ipv6 raguard vlan {{ item.id }} policy client
{% endfor %}
!

{% if icx_snmp_enable %}
snmp-server community public ro "default"
snmp-server enable vlan 1
snmp-server host {{ icx_snmp_host }} version v3 priv user
snmp-server group default v3 priv {{ icx_snmp_privs }}
snmp-server user {{ icx_snmp_user }} default v3 encrypted auth md5 {{ icx_snmp_password }} priv encrypted des {{ icx_snmp_password }}
!
{% endif %}
clock summer-time
!
ntp
 disable serve
{% for item in icx_ntp_servers %}
 server {{ item }}
{% endfor %}
!

{% for port in port_status["ports_to_remove"] %}
no interface ethernet {{ port }}
!
{% endfor %}

{% for item in icx_portconfig %}
interface ethernet {{ item.port }}
 port-name "{{ item.name }}"
 loop-detection
{% if icx_is_l3_switch %}
{% if 'link' not in item or item.link != "fibre" %}
 eee
{% endif %}
{% else %}
{% endif %}
 stp-protect
 broadcast limit 8192
 unknown-unicast limit
{% if item.type == "trust" %}
 raguard trust
 stp-bpdu-guard
 dhcp snooping trust
{% endif %}
{% for item in item.extraconfig|default([]) %}
 {{ item }}
{% endfor %}
!
{% endfor %}

{% if not icx_is_l3_switch %}
ip address {{ icx_mgmt_ip }} 255.255.255.0
{% endif %}
!
end
